{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018, 
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
          }
      },
    "plugins": ["@typescript-eslint", "react"],
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}